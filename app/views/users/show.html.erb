<h1><%= current_user.name %>'s Page</h1>

<p>
	<b>Name:</b>
	<%= @user.name %>
</p>

<p>
	<%= image_tag(@user.image_url, :width => 300) if @user.image.present? %>
</p>

<p>
	<b>Email:</b>
	<%= @user.email %>
</p>

<p>
	<b>Comfort Bio:</b>
	<%= @user.bio %>
</p>

<div id="nav">
<b><%= link_to "Edit User Info", edit_user_path(current_user.id) %></b> |
<b><%= link_to "Back", root_url %></b>
</div>