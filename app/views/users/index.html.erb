<h1>User Index</h1>
<p> <%= link_to "Quiz", "/quizzes/new" %> </p>

<div id="tag_cloud">
	<% tag_cloud User.tag_counts, %w[s m l] do |tag, css_class| %>
		<%= link_to tag.name, tag_path(tag.name), class: css_class %>
	<% end %>	
</div>

<!-- <div id="users">
